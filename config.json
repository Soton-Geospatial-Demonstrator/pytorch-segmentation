{
    "arch": {
        "type": "UNet",
        "args": {
            "freeze_backbone": false,
            "freeze_bn": false,
            "pretrained": false
        }
    },
    "ignore_index": -1,
    "loss": "LovaszSoftmax",
    "lr_scheduler": {
        "args": {},
        "type": "Poly"
    },
    "n_gpu": 1,
    "name": "UNet_T15",
    "optimizer": {
        "args": {
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0001
        },
        "differential_lr": true,
        "type": "SGD"
    },
    "pretrained": false,
    "train_loader": {
        "args": {
            "augment": true,
            "base_size": 460,
            "batch_size": 2,
            "blur": true,
            "crop_size": 400,
            "data_dir": "data/sentinel",
            "flip": true,
            "num_workers": 8,
            "rotate": true,
            "scale": false,
            "shuffle": true,
            "split": "training"
        },
        "type": "Sentinel"
    },
    "trainer": {
        "early_stop": 30,
        "epochs": 100,
        "log_dir": "saved/runs",
        "log_per_iter": 20,
        "monitor": "max Mean_IoU",
        "save_dir": "saved/",
        "save_period": 250,
        "tensorboard": true,
        "val": true,
        "val_per_epochs": 4
    },
    "use_synch_bn": false,
    "val_loader": {
        "args": {
            "batch_size": 2,
            "crop_size": 460,
            "data_dir": "data/sentinel",
            "num_workers": 4,
            "split": "validation",
            "val": true
        },
        "type": "Sentinel"
    }
}